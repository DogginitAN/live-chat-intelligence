{
  "manifest_version": 3,
  "name": "Live Chat Intelligence",
  "version": "1.0.0",
  "description": "Transform chaotic YouTube Live chat into visual insights - ticker detection, sentiment analysis, and AI summaries for trading streams",
  
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "tabs"
  ],
  
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "wss://web-production-6fa01.up.railway.app/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "side_panel": {
    "default_path": "sidepanel/panel.html"
  },
  
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Live Chat Intelligence"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["sidepanel/standalone.html", "sidepanel/standalone.js", "sidepanel/panel.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
